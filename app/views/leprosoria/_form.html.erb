<%= simple_form_for leprosorium, html: { class: "leprosorium form" } do |f| %>
  <% if leprosorium.errors.any? %>
    <div class="error-message">
      <%= leprosorium.errors.full_messages.to_sentence.capitalize %>
    </div>
  <% end %>

  <%= f.input :title, input_html: { autofocus: true } %>
  <%= link_to "Cancel", leprosoria_path, class: "btn btn--light" %>
  <%= f.submit class: "btn btn--secondary" %>
<% end %>
